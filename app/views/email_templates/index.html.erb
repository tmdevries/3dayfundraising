<p id="notice"><%= notice %></p>

<h1>Listing Email Templates</h1>
<% if @email_templates.present? %>
  <table>
    <thead>
      <tr>
        <th>Nickname</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @email_templates.each do |email_template| %>
        <tr>
          <td><%= email_template.alias %></td>
          <td><div class="btn-group">
            <button class="btn btn-default btn-sm" title='Show Message' data-toggle="modal" data-target="#template-<%= email_template.id %>" >
              <span class="glyphicon glyphicon-search"></span>
            </button>
            <%= link_to edit_email_template_path(email_template), class: "btn btn-default btn-sm", title: 'Edit template' do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to email_template, method: :delete, data: { confirm: 'Are you sure you want to delete this template?' }, class: "btn btn-default btn-sm", title: 'Delete auction' do %>
              <span class="glyphicon glyphicon-remove-sign"></span>
            <% end %>
          </div></td>
        </tr>
        <div id="template-<%= email_template.id %>" class="modal fade" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><%= email_template.alias %> Template</h4>
              </div>
              <div class="modal-body">
                <strong>Message</strong>
                <p><%= email_template.message %></p>
              </div>
              <div class="modal-footer">
                <div class="btn-group">
                  <%= link_to edit_email_template_path(email_template), class: "btn btn-md btn-primary" do %>
                    <span class="glyphicon glyphicon-search"></span> Edit 
                  <% end %>
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>

          </div>
        </div>
      <% end %>
    </tbody>
  </table>
<% else %>
  There are no templates for emails yet. Make a new one!
<% end %>
<br>
<div class="btn-group" style="margin-top:15px;">
  <%= link_to new_email_template_path, class: "btn btn-md btn-primary" do %>
    <span class="glyphicon glyphicon-plus"></span> New Template
  <% end %>
  <%= link_to 'Back', admin_path, class: "btn btn-md btn-primary" %>
</div>