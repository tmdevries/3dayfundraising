<!DOCTYPE html>
<html>
<head>
  <title>And We're Walking! Fundraising</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render "/shared/navbar" %>
<div class ="container">
  <% flash.each do |message_type, message| %>
	<div class="alert alert-<%= message_type %>"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> <%= message %></div>
  <% end %>
  <%= yield %>
  <%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>
