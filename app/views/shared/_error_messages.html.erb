<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <strong>Please fix the following <%= pluralize(@user.errors.count, "error") %> in the form.</strong>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>