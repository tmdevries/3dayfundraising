<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.order('id').each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><div class="btn-group inline">
          <%= link_to user_path(user), class: "btn btn-default btn-sm", title: 'Show user' do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
          <%= link_to edit_user_path(user), class: "btn btn-default btn-sm", title: 'Edit user' do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "btn btn-default btn-sm", title: 'Delete user' do %>
            <span class="glyphicon glyphicon-remove-sign"></span>
          <% end %>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
